<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#2F3035"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="24dp"
        android:src="@drawable/ic_red_ball"
        android:layout_marginTop="5dp"
        android:id="@+id/ball_image"
        android:layout_height="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Уральские Авиалинии"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_toEndOf="@id/ball_image"
        android:id="@+id/title"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/sf_regular"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginEnd="100dp"
        android:text="07:00  09:10   10:00  11:00  12:00  13:00  12:00"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/title"
        android:layout_toEndOf="@id/ball_image"
        android:id="@+id/time"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/sf_regular"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_above="@id/time"
        android:layout_marginEnd="10dp"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:id="@+id/price"
        android:fontFamily="@font/sf_medium"
        android:text="$2 390 >"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/time"
        android:layout_marginTop="10dp"
        android:background="@color/textHintColor"
        android:layout_height="1dp"/>

</RelativeLayout>